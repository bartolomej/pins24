fun main() =
    let
        var hello = "Hello\n\00"
        fun print_hello() = putstr(^hello)
        fun print_hello_2() =
            let
                fun print_hello_2_1() = putstr(^hello)
            in
                print_hello_2_1()
            end
    in
        print_hello(),
        print_hello_2()
    end

# Copies the string at src_ptr to dst_ptr address
# Expects len(dst_ptr) >= len(src_ptr)
# TODO: Handle error cases
fun strcpy(dst_ptr, src_ptr) =
    let
        var offset = 0
    in
        while ((src_ptr + offset)^ != 0)
        do
            (dst_ptr + offset)^ = (src_ptr + offset)^,
            offset = offset + 4
        end,
        # Null terminate the destination string
        (dst_ptr + offset)^ = '\00'
    end,
    0

